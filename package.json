{
  "author": "Alexander Garcia",
  "name": "@eva/api",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=16.18.0"
  },
  "main": "build/index.js",
  "description": "",
  "scripts": {
    "start": "node build/index.js",
    "build": "babel src --extensions \".ts,.js\" --out-dir build --copy-files",
    "deploy": "cross-env NODE_ENV=production node build/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/index.ts",
    "test": "yarn docker:test && sleep 20s && cross-env NODE_ENV=test mocha --check-leaks -r tsconfig-paths/register -r ts-node/register \"test/**/*.spec.ts\" --exit",
    "build-db": "ts-node src/database/seeders/index.ts",
    "db:migrate": "npx sequelize-cli db:migrate",
    "docker:dev": "yarn docker:test:down && docker compose -f ./docker/development/docker-compose.yml --env-file .env.development up --build -d",
    "docker:dev:stop": "docker compose -f ./docker/development/docker-compose.yml stop",
    "docker:dev:start": "yarn docker:test:down && docker compose -f ./docker/development/docker-compose.yml --env-file .env.development start",
    "docker:dev:down": "docker compose -f ./docker/development/docker-compose.yml down",
    "docker:dev:down:volume": "docker compose -f ./docker/development/docker-compose.yml down -v",
    "docker:test": "yarn docker:test:down && docker compose -f ./docker/test/docker-compose.yml --env-file .env.test up --build -d",
    "docker:test:down": "docker compose -f ./docker/test/docker-compose.yml down",
    "prepare": "husky install",
    "lint": "eslint . --fix --ext .js,.ts"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "7.20.7",
    "@babel/core": "7.20.12",
    "@babel/node": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "4.3.6",
    "@types/cli-table": "^0.3.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.16",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "10.0.1",
    "@types/multer": "^1.4.7",
    "@types/sequelize": "4.28.14",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "babel-plugin-module-resolver": "5.0.0",
    "chai": "4.3.8",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard-with-typescript": "34.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-module-resolver": "1.5.0",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "mocha": "10.2.0",
    "prettier": "2.8.3",
    "sequelize-cli": "6.6.0",
    "sequelize-typescript": "2.1.5",
    "supertest": "6.3.3",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "bcrypt": "5.1.0",
    "bcryptjs": "2.4.3",
    "cli-table": "0.3.11",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dbffile": "1.9.2",
    "dotenv": "^16.3.1",
    "express": "4.18.2",
    "express-list-endpoints": "6.0.0",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "9.0.0",
    "multer": "1.4.5-lts.1",
    "mysql2": "3.1.2",
    "sequelize": "6.29.0",
    "swagger-ui-express": "4.6.3",
    "ts-node": "10.9.1"
  }
}
